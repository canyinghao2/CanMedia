<?xml version="1.0" encoding="utf-8"?>
<resources>


    <attr name="fades" format="boolean" />
    <!-- Length of the delay to fade the indicator. -->
    <attr name="fadeDelay" format="integer" />
    <!-- Length of the indicator fade to transparent. -->
    <attr name="fadeLength" format="integer" />
    <attr name="selectedColor" format="color"/>
    <attr name="vpiUnderlinePageIndicatorStyle" format="reference" />
    <attr name="textColor" format="color"/>
    <attr name="textSize" format="dimension" />
    <attr name="radius"  format="float"/>
    <declare-styleable name="UnderlinePageIndicator">

        <!-- Whether or not the selected indicator fades. -->
        <attr name="fades" />
        <!-- Length of the delay to fade the indicator. -->
        <attr name="fadeDelay" />
        <!-- Length of the indicator fade to transparent. -->
        <attr name="fadeLength" />
        <!-- Color of the selected line that represents the current page. -->
        <attr name="selectedColor" />
        <!-- View background -->
        <attr name="android:background" />
    </declare-styleable>



    <bool name="default_underline_indicator_fades">true</bool>
    <integer name="default_underline_indicator_fade_delay">300</integer>
    <integer name="default_underline_indicator_fade_length">400</integer>
    <color name="default_underline_indicator_selected_color">#FF33B5E5</color>


    <declare-styleable name="ProgressWheel">
        <attr name="text" format="string" />
        <attr name="textColor" />
        <attr name="textSize"  />
        <attr name="barColor" format="color" />
        <attr name="rimColor" format="color" />
        <attr name="rimWidth" format="dimension" />
        <attr name="spinSpeed" format="dimension" />
        <attr name="delayMillis" format="integer" />
        <attr name="circleColor" format="color" />
        <attr name="radius"  />
        <attr name="barWidth" format="dimension" />
        <attr name="barLength" format="dimension" />
        <attr name="contourColor" format="color"/>
        <attr name="contourSize" format="dimension"/>
    </declare-styleable>


    <declare-styleable name="DiscrollView_LayoutParams">
        <attr name="discrollve_alpha" format="boolean"/>
        <attr name="discrollve_scaleX" format="boolean"/>
        <attr name="discrollve_scaleY" format="boolean"/>
        <attr name="discrollve_threshold" format="float"/>
        <attr name="discrollve_fromBgColor" format="color"/>
        <attr name="discrollve_toBgColor" format="color"/>
        <attr name="discrollve_translation"/>
    </declare-styleable>

    <attr name="discrollve_translation">
        <flag name="fromTop" value="0x01" />
        <flag name="fromBottom" value="0x02" />
        <flag name="fromLeft" value="0x04" />
        <flag name="fromRight" value="0x08" />
    </attr>
</resources>